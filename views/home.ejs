<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/semantic.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>
<body>
    <div class="wrapper">
        <div class="ui massive menu"></div>
        <br><br><br>
        <div class="ui container">
            <form action="/add" class="ui form" method="POST">
                <div class="ui three fields">
                    <div class="field">
                        <label for="name" class="ui header green">Enter the club name</label>
                        <input type="text" name="name" id="name">
                    </div>
                    <div class="field">
                        <label for="players" class="ui header green">Enter the player names</label>
                        <input type="text" name="players" id="players">
                    </div>
                    <div class="field">
                        <label for="coach" class="ui header green">Enter the coach name</label>
                        <input type="text" name="coach" id="coach">
                    </div>
                </div>
                <div class="ui fluid field">
                    <input type="submit" class="ui button green" value="Submit">
                </div>
            </form>
            <br><br>
            <table class="ui green table">
                <thead>
                    <th>Club name</th>
                    <th>Players</th>
                    <th>Coach</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </thead>
                <tbody>
                    <tr>
                        <td>FC Barcelona</td>
                        <td>Messi, Suarez, Iniesta</td>
                        <td>Valverde</td>
                        <td><a class="ui purple button"><i class="edit outline icon"></i></a></td>
                        <td><a class="ui red button"><i class="minus icon"></i></a></td>
                    </tr>

                    <% clubs.forEach((club)=>{ %>
                        <tr>
                            <td><%- club.name; %></td>
                            <td><%- club.players; %></td>
                            <td><%- club.coach; %></td>
                            <td><a href="/edit/<%= club._id %>" > class="ui purple button"><i class="edit outline icon"></i></a></td>
                        <td><a class="ui red button" href="/delete/<%= club._id %>"><i class="minus icon"></i></a></td>
                        </tr>
                      <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>